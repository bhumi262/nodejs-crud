<%- include('header') %>
<div class="container mt-3">
    <div class="row">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
                
            <div class="table-responsive">
                <% if (users.length > 0) { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>NAME</th>
                                <th>EMAIL</th>
                                <th>PHONE</th>
                                <th>PRODUCT</th>
                                <th>ACTION</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index %></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td><%= row.product %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                    <div style="text-align: center;">
                        <h1><a href="/add" style="text-decoration: none; color: #333;"><button style="padding: 10px 20px; font-size: 16px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;">Add user</button></a></h1>
                    </div>
                    
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>
